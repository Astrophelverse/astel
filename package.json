{
  "name": "astel-marketplace",
  "version": "1.0.0",
  "description": "Advanced Social Trade & Education Link - Mobile-first marketplace app",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd mobile-app && npm start",
    "build": "cd mobile-app && npm run build",
    "test": "jest",
    "lint": "eslint .",
    "setup": "npm install && cd server && npm install && cd ../mobile-app && npm install"
  },
  "keywords": ["marketplace", "social", "mobile", "react-native", "firebase"],
  "author": "ASTEL Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "eslint": "^8.57.0"
  },
  "workspaces": [
    "server",
    "mobile-app",
    "admin-dashboard"
  ]
}
